                "sendDataFromCloud": {
                    "type": "sendTo",
                    "label": {
                        "en": "Sedn Data to Cloud",
                        "de": "Daten in die Cloud senden",
                        "ru": "Передача данных в облако",
                        "pt": "Dados Sedn para a Nuvem",
                        "nl": "Sedn-gegevens naar de cloud",
                        "fr": "Transfert de données Sedn vers le cloud",
                        "it": "Invia dati al cloud",
                        "es": "Enviar datos a la nube",
                        "pl": "Sedn Data do chmury",
                        "uk": "Передавання даних у хмару",
                        "zh-cn": "数据上云"
                    },
                    "variant": "outlined",
                    "showProcess": true,
                    "command": "sendDataToCloud",
                    "useNative": true,
                    "hidden": "!data.EnableCustomPowerPlan",
                    "disabled": "if (data.PowerPlan.length <= 0) return true; for (let i = 0; i < data.PowerPlan.length; i++) { const plan = data.PowerPlan[i]; if (!plan.week || !plan.start_time  || isNaN(plan.power) ) return true; };  return false;",
                    "jsonData": "{\"table\": ${JSON.stringify(data.PowerPlan)}}",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "PowerPlan": {
                    "type": "table",
                    "label": "Custom Power Plan",
                    "hidden": "!data.EnableCustomPowerPlan",
                    "newLine": true,
                    "showSecondAddAt": 10,
                    "compact": true,
                    "xs": 12,
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "xl": 12,
                    "items": [
                        {
                            "type": "text",
                            "attr": "week",
                            "title": "Weekday (0,1,2,3,4,5,6)",
                            "validator": "typeof data.week === 'string' && data.week.search(/^([0-6](,[0-6])*)$/g) !== -1",
                            "default": ""
                        },
                        {
                            "type": "text",
                            "attr": "start_time",
                            "title": "Power-on time (HH:MM)",
                            "validator": "typeof data.start_time === 'string' && (data.start_time.search(/^((([01][0-9])|(2[0-3])):[0-5][0-9]|24:00)$/g) !== -1) ",
                            "validatorNoSaveOnError": true,
                            "validatorErrorText": "Format beachten HH:MM, richitg: 06:00 - falsch: 6:00",
                            "default": ""
                        },
                        {
                            "type": "text",
                            "attr": "end_time",
                            "title": "Power-off time (HH:MM)",
                            "validator": "typeof data.end_time === 'string' && (data.end_time.search(/^((([00][0-9])|(2[0-3])):[0-5][0-9]|24:00)$/g) !== -1) || ((parseInt(data.start_time.split(':')[0]) * 60 + parseInt(data.start_time.split(':')[1])) < (parseInt(data.end_time.split(':')[0]) * 60 + parseInt(data.end_time.split(':')[1])))",
                            "validatorNoSaveOnError": true,
                            "validatorErrorText": "Format beachten HH:MM, richitg: 06:00 - falsch: 6:00",
                            "default": ""
                        },
                        {
                            "type": "number",
                            "attr": "power",
                            "title": "Power (watts)",
                            "tooltip": "Power in watts",
                            "validator": "!isNaN(data.power)",
                            "validatorErrorText": "Darf nicht leer sein!",
                            "min": 0,
                            "step": 10,
                            "max": 2000
                        }
                    ]
                },
